{
  "name": "polkadot-overview",
  "version": "2.0.8",
  "description": "Validators explorer for Polkadot Network",
  "author": "genesis-lab-team",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "concurrently \"npm run start:api-dev\" \"npm run start:parser-light-dev\" \"npm run start:ui-dev\"",
    "production": "concurrently \"npm run start:api-production\" \"npm run start:parser-light-production\" \"npm run start:ui-production\"",
    "start:api-dev": "cd api && npm run watch",
    "start:api-production": "cd api && npm run start",
    "start:parser-light-dev": "cd parser-light && npm run watch",
    "start:parser-light-production": "cd parser-light && npm run start",
    "start:ui-dev": "cd ui && npm run serve",
    "start:ui-production": "cd ui && npm run serve:production"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
